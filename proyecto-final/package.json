{
  "name": "proyecto-final",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --env allure=true",
    "clean:reports": "rimraf allure-report allure-results",
    "generate-report": "allure generate allure-results --clean -o allure-report",
    "open-allure-report": "allure serve allure-results",
    "view-report": "npm run generate-report && http-server allure-report -p 8080",
    "full-test": "npm run clean:reports && npm test && npm run generate-report",
    "full-test-server": "npm run clean:reports && npm test && npm run generate-report && npm run view-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^14.5.3"
  },
  "dependencies": {
    "rimraf": "^6.0.1"
  }
}